<h1>Director #<%= @director_id %> details</h1>

<a href="/directors" class="btn btn-block btn-outline-secondary">
  Go back
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @current_director.name %>
  </dd>
  <dt>
    Dob
  </dt>
  <dd>
    <%= @current_director.dob %>
  </dd>
  <dt>
    Bio
  </dt>
  <dd>
    <%= @current_director.bio %>
  </dd>
  <dt>
    Image
  </dt>
  <dd>
    <img src=<%= @current_director.image %>>
  </dd>
  <dt>
    Created at
  </dt>
  <dd>
    over <%= @year_from_creation %> years ago
  </dd>
  <dt>
    Updated at
  </dt>
  <dd>
    over <%= @year_from_update %> years ago
  </dd>

<hr>

<h2>Filmography</h2>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
    </th>
  </tr>

  <tr>
  <% @list_of_movies.each do |movie|%>
    <td>
      <%= movie.id %>
    </td>

    <td>
      <img src=<%= movie.image %>>
    </td>

    <td>
      <%= movie.title %>
    </td>

    <td>
      <%= movie.year %>
    </td>

    <td>
      <%= @current_director.name %>
    </td>

    <td>
      <a href="/movies/<%= movie.id %>">
        Show details
      </a>
    </td>
  <% end %>
  </tr>
</table>