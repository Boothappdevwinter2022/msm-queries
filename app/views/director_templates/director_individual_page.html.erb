<h1>Director #<%= @director_id %> details</h1>

<a href="/directors" class="btn btn-block btn-outline-secondary">
  Go back
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @list_of_directors.at(@director_id.to_i-1).name %>
  </dd>
  <dt>
    Dob
  </dt>
  <dd>
    <%= @list_of_directors.at(@director_id.to_i-1).dob %>
  </dd>
  <dt>
    Bio
  </dt>
  <dd>
    <%= @list_of_directors.at(@director_id.to_i-1).bio %>
  </dd>
  <dt>
    Image
  </dt>
  <dd>
    <img src=<%= @list_of_directors.at(@director_id.to_i-1).image %>>
  </dd>
  <dt>
    Created at
  </dt>
  <dd>
    <%= @list_of_directors.at(@director_id.to_i-1).created_at %>
  </dd>
  <dt>
    Updated at
  </dt>
  <dd>
    <%= @list_of_directors.at(@director_id.to_i-1).updated_at %>
  </dd>

<hr>

<h2>Filmography</h2>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
    </th>
  </tr>

  <tr>
  <% @list_of_movies.each do |movie|%>
    <td>
      <%= movie.id %>
    </td>

    <td>
      <img src=<%= movie.image %>>
    </td>

    <td>
      <%= movie.title %>
    </td>

    <td>
      <%= movie.year %>
    </td>

    <td>
      <%= @list_of_directors.at(@director_id.to_i-1).name %>
    </td>

    <td>
      <a href="/">
        Show details
      </a>
    </td>
  <% end %>
  </tr>
</table>